<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TESTEBACKEND</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-colorida">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">H<span>+</span>H</a> <!--ADICIONAR CAMINHO PARA HOME-->

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li>
                            <button>
                                <a class="nav-link text-white" href="#">Serviços</a>
                            </button>
                        </li>

                        <li>
                        <button>
                            <a class="nav-link text-white" href="#">Sobre</a>
                        </button>
                        </li>

                        <button>
                            <a class="nav-link text-white" href="#">Contato</a>
                        </button>
                        </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                    {
                            <button class="nav-item">
                                <!--AJUSTAR ESSA NAVAGAÇÃO PARA IR À PÁGINA DE ACORDO COM O CPF-->
                                <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-route-id="@User.FindFirst("ClienteId")?.Value" asp-action="Details">
                                    <img class="icon-exit" src="~/img/user.png" alt="Perfil do Usuario"> 
                                    Paciente <span class="greeting-span">@User.Identity.Name</span>
                                </a>
                            </button>
                            <button class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Logout"> <img class="icon-exit" src="~/img/exit.png" alt="Sair"></a>
                            </button>
                    }
                    else
                    {
                            <button class="nav-item">
                                <a class="nav-link text-white" href="/Clientes/Create">Cadastro do Paciente</a>
                            </button>
                        <button class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Login">Login</a>
                        </button>
                    }
                    </ul>
                </div>
            </div>
        </nav>

        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Digital Hub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
